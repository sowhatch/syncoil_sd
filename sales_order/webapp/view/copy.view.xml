<mvc:View controllerName="zcbsd.salesorder.controller.AvailableProducts"
    xmlns:dnd="sap.ui.core.dnd"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	height="100%">
                <t:Table rows="{/ProductSet}" id="table">
                    <t:noData>
                        <BusyDialog />
                    </t:noData>
                    <t:columns>
                        <t:Column >
                            <t:label>
                                <Label text="{i18n>Product}"/>
                            </t:label>
                            <t:template>
                                <ObjectIdentifier title="{Maktx} ({Matnr})"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center">
                            <t:label>
                                <Label text="{i18n>Plant}"/>
                            </t:label>
                            <t:template>
                                <Text text="{Pname}" />
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center">
                            <t:label>
                                <Label text="{i18n>Amount}"/>
                            </t:label>
                            <t:template>
                                <ObjectNumber number="{parts:[
                                                                {path: 'Amount'},
                                                                {path: 'Currency'}
                                                             ],
                                                       type:'sap.ui.model.type.Currency',
                                                       formatOptions: {showMeasure: false}
                                                       }" 
                                              unit="{Currency}"
                                              textAlign="End"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center">
                            <t:label>
                                <Label text="{i18n>Samntu}"/>
                            </t:label>
                            <t:template>
                                <ObjectNumber number="{parts:[
                                                                {path: 'Samntu'},
                                                                {path: 'CurrencyU'}
                                                             ],
                                                       type:'sap.ui.model.type.Currency',
                                                       formatOptions: {showMeasure: false}
                                                       }" 
                                              unit="{CurrencyU}"
                                              textAlign="End"/>
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
</mvc:View>
