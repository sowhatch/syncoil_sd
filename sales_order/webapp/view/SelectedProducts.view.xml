<mvc:View
	controllerName="zcbsd.salesorder.controller.SelectedProducts"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	height="30%">
	<Page title="{i18n>selectedTabletitle}">
	<Table
		id="idSelectedTable"
		mode="SingleSelectMaster"
		growing="true"
		growingThreshold="10"
		beforeOpenContextMenu="onBeforeOpenContextMenu"
		items="{
			path: 'selected>/OrderSet'
		}"
		noData="Please drag-and-drop products here.">
		
			<!-- filters: {path: 'Rank', operator: 'GT', value1: '0'}, -->
			<!-- sorter: {path: 'Rank', descending: true} -->

		<contextMenu>
			<Menu>
				<MenuItem text="Move to Available Products" press="moveToAvailableProductsTable" />
				<MenuItem text="Move up" press="moveUp" />
				<MenuItem text="Move down" press="moveDown" />
			</Menu>
		</contextMenu>
		
		<columns>
			<Column>
				<Text text="{i18n>Product}" />
			</Column>
			<Column>
				<Text text="{i18n>Plant}" />
			</Column>
			<Column>
				<Text text="{i18n>Quantity}" />
			</Column>
		</columns>
		<dragDropConfig>
			<dnd:DragInfo
				groupName="selected2available"
				sourceAggregation="items" />
			<dnd:DropInfo
				groupName="available2selected"
				targetAggregation="items"
				dropPosition="Between"
				drop="onDropSelectedProductsTable" />
			<dnd:DragDropInfo
				sourceAggregation="items"
				targetAggregation="items"
				dropPosition="Between"
				drop="onDropSelectedProductsTable"/>
		</dragDropConfig>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{selected>Maktx} ({selected>Matnr})" wrapping="false" />
					<Text text="{selected>Pname}" wrapping="false" />
					<Input value="{
						path: 'selected>Quantity',
						type: 'sap.ui.model.type.Integer'
					}" />
					<Text text="{selected>Amount}" visible="false"/>
					<Text text="{selected>Samntu}" visible="false"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	<footer>
		<OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>createButton}" press=".onOpenCreateDialog" icon="sap-icon://create" type="Accept"/>
            </OverflowToolbar>
	</footer>
	</Page>
</mvc:View>